<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:gravity="center_horizontal"
		android:padding="24dp"
		android:background="#F5F5F7"
		tools:context=".MainActivity">
	
	<TextView
			android:id="@+id/textView_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/app_name"
			android:textSize="32sp"
			android:textStyle="bold"
			android:layout_marginTop="32dp"
			android:layout_marginBottom="24dp" />
	
	<!-- LinearLayout 대신 TextView 하나로 교체, drawableTint 추가 -->
	<TextView
			android:id="@+id/textView_status"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:drawablePadding="8dp"
			android:gravity="center_vertical"
			android:textColor="#333333"
			android:layout_marginBottom="48dp" />
	<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/button_grant"
			android:visibility="invisible"
			android:translationY="-25dp"
			android:backgroundTint="@color/green"
			android:textColor="@color/white"
			android:text="@string/grant_button"/>
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:paddingVertical="12dp"
			android:layout_marginBottom="8dp">
		
		<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/warning_turnoff"
				android:textSize="16sp" />
		
		<com.google.android.material.switchmaterial.SwitchMaterial
				android:id="@+id/warning_turnoff"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="end"
				app:trackTint="@color/switch_track_color"
				app:thumbTint="@color/switch_thumb_color" />
	</LinearLayout>
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:paddingVertical="12dp"
			android:layout_marginBottom="8dp">
		
		<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/warning_earphone"
				android:textSize="16sp" />
		
		<com.google.android.material.switchmaterial.SwitchMaterial
				android:id="@+id/warning_earphone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="end"
				app:trackTint="@color/switch_track_color"
				app:thumbTint="@color/switch_thumb_color" />
	</LinearLayout>
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:paddingVertical="12dp"
			android:layout_marginBottom="8dp">
		
		<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/warning_volume"
				android:textSize="16sp" />
		
		<com.google.android.material.switchmaterial.SwitchMaterial
				android:id="@+id/warning_volume"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="end"
				app:trackTint="@color/switch_track_color"
				app:thumbTint="@color/switch_thumb_color" />
	</LinearLayout>
</LinearLayout>
